<Page x:Class="WPFApp.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid Background="White">
        <ListView x:Name="ExtensionsList" Margin="50,50,500,150" SelectionChanged="TaskList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ExtensionsName" Width="250" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox HorizontalAlignment="Left" Margin="511,76,0,0" TextWrapping="Wrap" Text="ExtentionName" VerticalAlignment="Top" Width="169" Height="28"/>
        <Button Content="Add Extension" HorizontalAlignment="Left" Margin="685,76,0,0" VerticalAlignment="Top" Height="28" Width="98"/>
        <TextBox x:Name="outputBox" HorizontalAlignment="Left" Margin="37,345,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="517" Height="53"/>
        <ComboBox HorizontalAlignment="Left" Margin="632,20,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="555,20,0,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged" Height="20"/>
        <Button x:Name="ExitCreateJob" Content="Exit" HorizontalAlignment="Left" Margin="619,356,0,0" VerticalAlignment="Top" Height="32" Width="133"/>
    </Grid>
</Page>
