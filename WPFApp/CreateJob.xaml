<Page x:Class="WPFApp.CreateJob"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateJob">

    <Grid Background="White">
        <TextBox x:Name="JobName" HorizontalAlignment="Left" Margin="37,74,0,0" TextWrapping="Wrap" Text="Enter the name of the job" VerticalAlignment="Top" Width="396" Height="35"/>
        <TextBox x:Name="TypeBackup" HorizontalAlignment="Left" Margin="37,145,0,0" TextWrapping="Wrap" Text="Type of backup" VerticalAlignment="Top" Width="396" Height="25"/>
        <TextBox x:Name="TargetPath" HorizontalAlignment="Left" Margin="37,199,0,0" TextWrapping="Wrap" Text="Select a source path" VerticalAlignment="Top" Width="396" Height="26"/>
        <TextBox x:Name="SourcePath" HorizontalAlignment="Left" Margin="37,264,0,0" TextWrapping="Wrap" Text="Type of backup" VerticalAlignment="Top" Width="396" Height="25"/>
        <TextBox x:Name="outputBox" HorizontalAlignment="Left" Margin="37,345,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="517" Height="53"/>
        <ComboBox HorizontalAlignment="Left" Margin="632,20,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="555,20,0,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged" Height="20"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="619,356,0,0" VerticalAlignment="Top" Height="32" Width="133" Click="buttonLeave_Click"/>
        <Button Content="Select path" HorizontalAlignment="Left" Margin="459,202,0,0" VerticalAlignment="Top"/>
        <Button Content="Select path" HorizontalAlignment="Left" Margin="461,267,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>
