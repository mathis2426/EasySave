<Page x:Class="WPFApp.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFApp"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="White">
        <Button x:Name="CreateJob" Content="Create Job" HorizontalAlignment="Left" Margin="591,126,0,0" VerticalAlignment="Top" Click="ButtonCreateJob_Click" Height="33" Width="133"/>
        <Button x:Name="DeleteJob" Command="{Binding DeleteJobCommand}" Content="Delete Job" HorizontalAlignment="Left" Margin="591,192,0,0" VerticalAlignment="Top" Height="33" Width="133"/>
        <Button x:Name="Exit" Content="Exit" HorizontalAlignment="Left" Margin="619,356,0,0" VerticalAlignment="Top" Height="32" Width="133" Click="ButtonLeave_Click"/>
        <Button x:Name="ManageJob" Content="Manage Job" HorizontalAlignment="Left" Margin="591,270,0,0" VerticalAlignment="Top" Click="ButtonManageJob_Click" Height="33" Width="133"/>
        <ListView x:Name="TaskList" ItemsSource="{Binding JobsList}" SelectedItem="{Binding SelectedJob}" Margin="37,50,298,147">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Number" Width="120" DisplayMemberBinding="{Binding Number}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox Text="{Binding OutputText}" IsReadOnly="True" Margin="50,335,233,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="517" Height="53"/>
        <ComboBox HorizontalAlignment="Left" Margin="598,20,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="511,20,0,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top" Width="72" TextChanged="TextBox_TextChanged" Height="20"/>
        <Button Margin="0,17,19,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ButtonSettings_Click">
            <fa:ImageAwesome Icon="Cog" Width="27" Height="24"/>
        </Button>
    </Grid>
</Page>
